{
    "name": "heidkaemper/statamic-toolbar",
    "license": "MIT",
    "type": "statamic-addon",
    "description": "A Toolbar for Statamic CMS",
    "authors": [
        {
            "name": "Lars Heidk√§mper",
            "homepage": "https://github.com/heidkaemper"
        }
    ],
    "require": {
        "php": "^8.0",
        "statamic/cms": "^3.3",
        "mck89/peast": "^1.15"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "3.13.0",
        "orchestra/testbench": "^7.17",
        "pestphp/pest": "^1.22"
    },
    "autoload": {
        "psr-4": {
            "Heidkaemper\\Toolbar\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Heidkaemper\\Toolbar\\Tests\\": "tests"
        }
    },
    "extra": {
        "statamic": {
            "name": "Toolbar",
            "description": "Statamic Toolbar"
        },
        "laravel": {
            "providers": [
                "Heidkaemper\\Toolbar\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "phpcs": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --dry-run --verbose --diff",
        "phpcs-fix": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "test": "vendor/bin/pest"
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
